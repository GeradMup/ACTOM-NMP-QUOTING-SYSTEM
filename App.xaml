<Application x:Class="NMP_Quoting_System.App"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:local="clr-namespace:NMP_Quoting_System"
			 xmlns:views="clr-namespace:NMP_Quoting_System.Views"
			 xmlns:viewmodels="clr-namespace:NMP_Quoting_System.ViewModels"
			 >
	<Application.Resources>
		<ResourceDictionary>
			<ResourceDictionary.MergedDictionaries>
				<ResourceDictionary Source="/Styles/UIColours.xaml"/>
				<ResourceDictionary Source="/Styles/ButtonStyles.xaml"/>
			</ResourceDictionary.MergedDictionaries>
			
			<DataTemplate DataType="{x:Type viewmodels:NavigationViewModel}">
				<views:NavigationView/>
			</DataTemplate>

			<DataTemplate DataType="{x:Type viewmodels:GearBoxSelectionViewModel}">
				<views:GearBoxSelectionView/>
			</DataTemplate>
			
		</ResourceDictionary>
	</Application.Resources>
</Application>
